<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>WebRTC Video Conferencing</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      overflow: hidden;
    }
    .video-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;
      height: calc(100vh - 150px);
      background-color: #f8f9fa;
    }
    .video-container video {
      width: 100%;
      max-width: 100%;
      margin: 10px;
      border-radius: 10px;
      object-fit: cover;
      background: #000;
    }
    @media (max-width: 768px) {
      .video-container {
        flex-direction: column;
      }
    }
    .controls {
      background-color: #f8f9fa;
      padding: 10px;
      border-top: 1px solid #ddd;
    }
    .controls .input-group {
      margin-top: 10px;
    }
  </style>
</head>
<body>
  <div id="login" class="vh-100 d-flex justify-content-center align-items-center">
    <div class="text-center">
      <h2>Login</h2>
      <input type="text" id="username" class="form-control my-3" placeholder="Enter your name">
      <button id="loginBtn" class="btn btn-primary">Login</button>
    </div>
  </div>

  <div id="main" hidden class="d-flex flex-column vh-100">
    <div class="container-fluid video-container">
      <div class="row w-100">
        <div class="col-6">
          <video id="localVideo" autoplay muted playsinline></video>
        </div>
        <div class="col-6">
          <video id="remoteVideo" autoplay playsinline></video>
        </div>
      </div>
    </div>

    <div class="controls position-fixed bottom-0 w-100">
      <div class="container">
        <div class="row align-items-center gy-2">

          <div class="input-group mt-2">
            <input type="text" id="peerName" class="form-control" placeholder="Type a message">
            <button id="startCallBtn" class="btn btn-success">Send</button>
          </div>
          <!-- <div class="col-12 col-md-4">
            <button id="startCallBtn" class="btn btn-success w-100 mb-2">Start Call</button>
            <input type="text" id="peerName" class="form-control" placeholder="Peer Name">
          </div> -->
          <div class="col-12 col-md-4 text-center">
            <button id="toggleMic" class="btn btn-secondary w-33 me-2">Mute Mic</button>
            <button id="toggleCam" class="btn btn-secondary w-33">Turn Camera Off</button>
            <button id="disconnectBtn" class="btn btn-danger w-33">Disconnect</button>
          </div>
          <div class="col-12">
            <div id="chat" class="border rounded p-3 bg-white">
              <div id="messages" class="overflow-auto" style="max-height: 150px;"></div>
              <div class="input-group mt-2">
                <input type="text" id="messageInput" class="form-control" placeholder="Type a message">
                <button id="sendBtn" class="btn btn-primary">Send</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/client.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
